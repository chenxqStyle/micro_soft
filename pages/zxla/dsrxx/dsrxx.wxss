.inputtext-sty{
  display:flex;
  justify-content: center;
  align-items: center; 
  width:530rpx;
}

.inputtext-sty input{
  width:100%;
}

.choice-list-sty{
  width:560rpx;
}

.picker{
  width:90%;
  display:flex;
  justify-content: left;
  align-items: left;
  margin-left:10rpx;
  height:66rpx;
  padding-left: 20rpx;
}

.list-but{
  display:flex;
  justify-content: space-around;
  padding:50rpx;
}

.list-but button{
  border:1px solid #2088d6;
  border-radius:8rpx;
  color:#2088d6;
  background: #fff;
}

.show-page{
  height:740rpx;
  display: block;
  transition: height 0.6s;
}

.active-user{
  background:#2088d6;
  color:#fff; 
}

.bto{
  margin: 30rpx auto;
}
